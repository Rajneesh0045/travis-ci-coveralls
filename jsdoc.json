{
	"source": {
		"include": [ "index.js" ],
		"includePattern": ".js$",
		"excludePattern": "(node_modules/|docs|.test.)"
	},
	"plugins": [ "plugins/markdown", "plugins/summarize" ],
	"sourceType": "module",
	"opts": {
		"recurse": true,
		"encoding": "utf8",
		"destination": "./docs/",
		"readme": "README.md"
	},
	"templates": {
		"cleverLinks": true,
		"monospaceLinks": true
	}
}
